  <dialog id="modalContato" class="w-full max-w-lg p-8 bg-white rounded-2xl shadow-2xl backdrop:bg-black/60">
    <div class="flex justify-between items-center mb-8">
      <h3 class="text-3xl font-bold text-gray-800">Fale Conosco</h3>
      <button onclick="document.getElementById('modalContato').close()" class="text-4xl text-gray-500 hover:text-gray-800">&times;</button>
    </div>

    <form id="formContato" class="space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nome completo <span class="text-red-500">*</span></label>
        <input type="text" name="nome" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-600 outline-none transition" placeholder="Seu nome">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Telefone / WhatsApp <span class="text-red-500">*</span></label>
        <input type="tel" name="telefone" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-600 outline-none transition" placeholder="(11) 98765-4321">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Mensagem <span class="text-red-500">*</span></label>
        <textarea name="mensagem" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-600 outline-none transition resize-none" placeholder="Sua mensagem..."></textarea>
      </div>

      <div class="flex gap-4 justify-end pt-4">
        <button type="button" onclick="document.getElementById('modalContato').close()"
          class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-xl transition">
          Cancelar
        </button>
        <button type="submit" id="btnEnviar"
          class="px-8 py-3 bg-green-600 hover:bg-green-700 text-white font-bold rounded-xl transition flex items-center gap-3 shadow-lg">
          <span id="textoBotao">Enviar Mensagem</span>
          <svg id="loadingSpinner" class="w-5 h-5 hidden animate-spin" viewBox="0 0 38 38" stroke="currentColor">
            <g fill="none" fill-rule="evenodd">
              <g transform="translate(1 1)" stroke-width="3">
                <circle stroke-opacity=".3" cx="18" cy="18" r="17"/>
                <path d="M36 18c0-9.94-8.06-18-18-18">
                  <animateTransform attributeName="transform" type="rotate" from="0 18 18" to="360 18 18" dur="1s" repeatCount="indefinite"/>
                </path>
              </g>
            </g>
          </svg>
        </button>
      </div>
    </form>
  </dialog>

  <div id="toastSucesso" class="fixed inset-0 flex items-center justify-center z-[9999] pointer-events-none hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 flex items-center gap-5 animate-bounceIn max-w-md">
      <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      <div>
        <h4 class="text-2xl font-bold text-gray-800">Mensagem enviada!</h4>
        <p class="text-gray-600">Entraremos em contato em breve pelo WhatsApp.</p>
      </div>
    </div>
  </div>


  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("btnMenuMobile");
    const menu = document.getElementById("mobileMenu");

    window.fecharMenuMobile = function() {
      menu.style.maxHeight = "0px";
    };

    btn.addEventListener("click", () => {
      if (menu.style.maxHeight && menu.style.maxHeight !== "0px") {
        menu.style.maxHeight = "0px";
      } else {
        menu.style.maxHeight = menu.scrollHeight + "px";
      }
    });

    menu.querySelectorAll("a").forEach(link => {
      link.addEventListener("click", () => {
        menu.style.maxHeight = "0px";
      });
    });

    document.addEventListener("click", (e) => {
      if (!menu.contains(e.target) && !btn.contains(e.target)) {
        menu.style.maxHeight = "0px";
      }
    });
  });

  const form = document.getElementById('formContato');
  const btnEnviar = document.getElementById('btnEnviar');
  const textoBotao = document.getElementById('textoBotao');
  const loading = document.getElementById('loadingSpinner');
  const toast = document.getElementById('toastSucesso');

  form.addEventListener('submit', function(e) {
    e.preventDefault();
    textoBotao.textContent = 'Enviando...';
    loading.classList.remove('hidden');
    btnEnviar.disabled = true;

    setTimeout(() => {
      loading.classList.add('hidden');
      toast.classList.remove('hidden');
      document.getElementById('modalContato').close();
      form.reset();

      setTimeout(() => {
        textoBotao.textContent = 'Enviar Mensagem';
        btnEnviar.disabled = false;
        toast.classList.add('hidden');
      }, 4000);
    }, 2000);
  });
</script>
