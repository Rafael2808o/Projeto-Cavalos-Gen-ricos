<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="module" src="https://cdn.jsdelivr.net/npm/@twind/core@1.1.1/twind.umd.js"></script>
    <title>Tela de Login</title>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">

    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-sm">
        <h1 class="text-2xl font-bold text-center text-sistema-700 mb-6">Login</h1>

        <form action="/admin/login" method="POST" class="flex flex-col gap-4">
            <div>
                <label class="block text-sm font-semibold mb-1">Usu√°rio</label>
                <input type="text" name="usuario" required
                       class="w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-sistema-600" />
            </div>

            <div>
                <label class="block text-sm font-semibold mb-1">Senha</label>
                <input type="password" name="senha" required
                       class="w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-sistema-600" />
            </div>

            <button type="submit"
                    class="bg-sistema-700 text-white py-2 rounded-lg hover:bg-sistema-600 transition">
                Entrar
            </button>

            <% if (typeof mensagem !== 'undefined') { %>
                <p class="text-red-600 text-center text-sm mt-2"><%= mensagem %></p>
            <% } %>
        </form>
    </div>

</body>
</html>
