<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sistema - Painel Administrativo</title>

  <script type="module" src="/js/twind-setup.js"></script>
  <script src="https://cdn.twind.style"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-neutral-50 min-h-screen">

  <header class="bg-gradient-to-r from-green-800 via-green-700 to-green-600 text-white shadow-lg border-b border-white/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <div class="flex items-center justify-between h-16 lg:h-20">

        <div class="flex items-center flex-shrink-0">

          <img src="/img/F.png" alt="Logo da Empresa" class="h-20 w-auto sm:h-16">

          <h1 class="ml-4 text-xl sm:text-2xl font-bold tracking-tight hidden lg:block">
            Sistema Administrativo
          </h1>
        </div>

        <nav class="flex items-center gap-3 sm:gap-6 text-sm lg:text-base font-medium">
          <a href="/usuarios/"      class="hover:text-green-200 transition">Usuários</a>
          <span class="opacity-60 hidden sm:inline">|</span>
          <a href="/produtos/"      class="hover:text-green-200 transition">Produtos</a>
          <span class="opacity-60 hidden sm:inline">|</span>
          <a href="/categorias/"    class="hover:text-green-200 transition">Categorias</a>
          <span class="opacity-60 hidden sm:inline">|</span>
          <a href="/movimentacao/"  class="hover:text-green-200 transition">Movimentação</a>
          <span class="opacity-60 hidden sm:inline">|</span>
          <a href="/"         class="hover:text-red-300 transition font-semibold">Sair</a>
        </nav>

      </div>

      <div class="md:hidden pb-3 text-center">
        <h2 class="text-lg font-semibold text-green-100">
          Painel Administrativo
        </h2>
      </div>

    </div>
  </header>

<main class="min-h-screen bg-neutral-50 pt-20 pb-12 px-4 md:px-8">

  <div class="max-w-7xl mx-auto mb-10 bg-gradient-to-r from-green-600 to-emerald-700 rounded-2xl shadow-2xl">
    <h1 class="text-3xl md:text-4xl font-bold text-white px-8 py-8">
      Gerenciamento Administrativo
    </h1>
  </div>

  <div class="max-w-7xl mx-auto space-y-12">

    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-white rounded-2xl shadow-xl border border-neutral-200 p-8 hover:shadow-2xl hover:scale-105 transition-all duration-300">
        <h3 class="text-lg font-semibold text-neutral-600">Total de Produtos</h3>
        <p class="text-5xl font-extrabold text-green-700 mt-4"><%= totalProdutos %></p>
        <p class="text-sm text-neutral-500 mt-2">Cadastrados no sistema</p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl border border-red-200 p-8 hover:shadow-2xl hover:scale-105 transition-all duration-300 ring-2 ring-red-100">
        <h3 class="text-lg font-semibold text-neutral-600">Produtos em Alerta</h3>
        <p class="text-5xl font-extrabold text-red-600 mt-4"><%= produtosEmAlerta %></p>
        <p class="text-sm text-red-600 font-medium mt-2">Abaixo do estoque mínimo</p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl border border-neutral-200 p-8 hover:shadow-2xl hover:scale-105 transition-all duration-300">
        <h3 class="text-lg font-semibold text-neutral-600">Valor Total do Estoque</h3>
        <p class="text-4xl font-extrabold text-green-700 mt-4">
          R$ <%= Number(valorTotalEstoque).toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
        </p>
        <p class="text-sm text-neutral-500 mt-2">Valor estimado atual</p>
      </div>
    </section>

    <section class="grid grid-cols-1 lg:grid-cols-2 gap-8">

      <div class="bg-white rounded-2xl shadow-xl border border-neutral-200 p-6">
        <div class="mb-6 flex items-center justify-between">
          <h3 class="text-2xl font-bold text-neutral-800">Produtos por Categoria</h3>
          <span class="text-sm text-neutral-500"><%= produtosPorCategoria.length %> categorias</span>
        </div>
        <div class="bg-neutral-50 rounded-xl p-6 min-h-96">
          <canvas id="barrasProdutos"></canvas>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-xl border border-red-200 p-6 ring-2 ring-red-50">
        <h3 class="text-2xl font-bold text-red-600 mb-6 flex items-center">
          <svg class="w-9 h-9 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.366-.446.982-.446 1.348 0l6.726 8.164c.347.421.258.994-.197 1.28-.455.286-1.016.112-1.28-.309L10 6.42 5.146 12.235c-.264.421-.825.595-1.28.309-.455-.286-.544-.859-.197-1.28l6.726-8.164z" clip-rule="evenodd"/>
          </svg>
          Atenção: Produtos com Estoque Baixo
        </h3>

        <% if (listaEstoqueBaixo && listaEstoqueBaixo.length > 0) { %>
          <div class="space-y-4 max-h-96 overflow-y-auto pr-2">
            <% listaEstoqueBaixo.forEach(produto => { %>
              <div class="border-l-4 border-red-500 bg-red-50 rounded-r-xl p-4 hover:bg-red-100 transition-all duration-200">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <p class="font-bold text-neutral-800 text-lg"><%= produto.nome_produto %></p>
                    <p class="text-sm text-neutral-600"><%= produto.nome_categoria %></p>
                  </div>
                  <div class="text-right ml-4">
                    <span class="text-3xl font-bold text-red-600"><%= produto.quantidade_estoque %></span>
                    <p class="text-xs text-neutral-500">unidades</p>
                  </div>
                </div>
                <div class="mt-3 flex flex-wrap gap-2">
                  <span class="text-xs bg-red-200 text-red-800 px-3 py-1 rounded-full font-bold">
                    Mínimo: <%= produto.estoque_minimo %>
                  </span>
                  <% if (produto.quantidade_estoque === 0) { %>
                    <span class="text-xs bg-black text-white px-4 py-1 rounded-full font-bold animate-pulse">ESGOTADO</span>
                  <% } else if (produto.quantidade_estoque <= 2) { %>
                    <span class="text-xs bg-red-700 text-white px-4 py-1 rounded-full font-bold">CRÍTICO</span>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>

          <div class="mt-6 text-center bg-red-100 rounded-xl p-4">
            <p class="text-lg font-bold text-red-800">
              <%= listaEstoqueBaixo.length %> produto(s) precisam de reposição urgente!
            </p>
          </div>

        <% } else { %>
          <div class="text-center py-16">
            <svg class="w-20 h-20 mx-auto mb-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-2xl font-bold text-green-600">Tudo sob controle!</p>
            <p class="text-neutral-600 mt-2">Nenhum produto com estoque abaixo do mínimo.</p>
          </div>
        <% } %>
      </div>

    </section>
  </div>
</main>

<script>
  const dados = <%- JSON.stringify(produtosPorCategoria) %>;
  const labels = dados.map(c => c.nome_categoria || 'Sem categoria');
  const valores = dados.map(c => c.total_produtos);

  new Chart(document.getElementById('barrasProdutos'), {
    type: 'bar',
    data: {
      labels: labels,
      datasets: [{
        label: 'Produtos',
        data: valores,
        backgroundColor: 'rgba(34, 197, 94, 0.8)',
        borderColor: '#22c55e',
        borderWidth: 2,
        borderRadius: 10,
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: { legend: { display: false } },
      scales: {
        y: { beginAtZero: true, ticks: { stepSize: 1 } }
      },
      animation: { duration: 1500 }
    }
  });
</script>

<%- include('../includes/footer.ejs') %>
