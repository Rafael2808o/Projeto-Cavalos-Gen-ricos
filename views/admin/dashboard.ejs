<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sistema - Painel Administrativo</title>

  <script type="module" src="/js/twind-setup.js"></script>
  <script src="https://cdn.twind.style"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-neutral-50 min-h-screen">

  <header class="bg-gradient-to-r from-green-800 via-green-700 to-green-600 text-white shadow-xl sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <div class="flex items-center justify-between h-16 lg:h-20">

        <div class="flex items-center space-x-3">
          <img src="/img/F.png" alt="Logo da Empresa" class="h-12 w-12 rounded-lg ring-2 ring-white/40">
          <h1 class="text-xl font-bold hidden lg:block">Sistema Administrativo</h1>
        </div>

        <button id="btnMenu" class="lg:hidden p-3 rounded-lg hover:bg-white/10 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="2.2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <nav class="hidden lg:flex items-center gap-8 text-base font-medium">
          <a href="/usuarios/"     class="hover:text-green-100 transition">Usuários</a>
          <a href="/produtos/"     class="hover:text-green-100 transition">Produtos</a>
          <a href="/categorias/"   class="hover:text-green-100 transition">Categorias</a>
          <a href="/movimentacao/" class="hover:text-green-100 transition">Movimentação</a>
          <a href="/"              class="hover:text-red-200 font-bold transition">Sair</a>
        </nav>
      </div>

      <div class="md:hidden text-center py-3 border-t border-white/20">
        <h2 class="text-lg font-semibold">Painel Administrativo</h2>
      </div>

      <nav id="mobileMenu"
        class="lg:hidden bg-green-700/95 backdrop-blur-sm border-t border-white/20 overflow-hidden"
        style="max-height: 0; transition: max-height 0.35s ease-out;">

        <div class="py-5 space-y-1">

          <a href="/usuarios/" class="flex items-center gap-5 px-8 py-4 hover:bg-white/10 transition text-lg font-medium">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zM12 14v6m4-6v6m0 0H8m8 0h4m-12 0H4"></path></svg>
            <span>Usuários</span>
          </a>

          <a href="/produtos/" class="flex items-center gap-5 px-8 py-4 hover:bg-white/10 transition text-lg font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h8v8H3V3zM13 3h8v5h-8V3zM3 13h5v8H3v-8zM13 11h8v10h-8V11z" />
            </svg>
            <span>Produtos</span>
          </a>

          <a href="/categorias/" class="flex items-center gap-5 px-8 py-4 hover:bg-white/10 transition text-lg font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.098 19.902a1.5 1.5 0 001.5 1.5h12.804a1.5 1.5 0 001.5-1.5V6.873a1.5 1.5 0 00-.44-1.06L15.187.939A1.5 1.5 0 0014.127.5H5.598a1.5 1.5 0 00-1.5 1.5v17.902z" />
            </svg>
            <span>Categorias</span>
          </a>

          <a href="/movimentacao/" class="flex items-center gap-5 px-8 py-4 hover:bg-white/10 transition text-lg font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="w-6 h-6" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12m-4.5 4.5h15m4.5 0L21 12m0 0L16.5 7.5m4.5 4.5H6" />
</svg>
            <span>Movimentação</span>
          </a>

          <a href="/" class="flex items-center gap-5 px-8 py-4 hover:bg-white/10 transition text-lg font-medium">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7"/></svg>
            <span>Sair</span>
          </a>

        </div>
      </nav>

    </div>
  </header>

  <!-- MAIN -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <div class="mb-10 bg-gradient-to-r from-green-600 to-emerald-700 rounded-2xl shadow-2xl">
      <h1 class="text-3xl md:text-4xl font-bold text-white px-8 py-8">
        Gerenciamento Administrativo
      </h1>
    </div>

    <div class="space-y-12">

      <!-- Cards de Resumo -->
      <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl shadow-xl border border-neutral-200 p-8 hover:shadow-2xl hover:scale-105 transition-all duration-300">
          <h3 class="text-lg font-semibold text-neutral-600">Total de Produtos</h3>
          <p class="text-5xl font-extrabold text-green-700 mt-4"><%= totalProdutos %></p>
          <p class="text-sm text-neutral-500 mt-2">Cadastrados no sistema</p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl border border-red-200 p-8 hover:shadow-2xl hover:scale-105 transition-all duration-300 ring-2 ring-red-100">
          <h3 class="text-lg font-semibold text-neutral-600">Produtos em Alerta</h3>
          <p class="text-5xl font-extrabold text-red-600 mt-4"><%= produtosEmAlerta %></p>
          <p class="text-sm text-red-600 font-medium mt-2">Abaixo do estoque mínimo</p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl border border-neutral-200 p-8 hover:shadow-2xl hover:scale-105 transition-all duration-300">
          <h3 class="text-lg font-semibold text-neutral-600">Valor Total do Estoque</h3>
          <p class="text-4xl font-extrabold text-green-700 mt-4">
            R$ <%= Number(valorTotalEstoque).toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
          </p>
          <p class="text-sm text-neutral-500 mt-2">Valor estimado atual</p>
        </div>
      </section>

      <!-- Gráficos e Alertas -->
      <section class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <div class="bg-white rounded-2xl shadow-xl border border-neutral-200 p-6">
          <div class="mb-6 flex items-center justify-between">
            <h3 class="text-2xl font-bold text-neutral-800">Produtos por Categoria</h3>
            <span class="text-sm text-neutral-500"><%= produtosPorCategoria.length %> categorias</span>
          </div>
          <div class="bg-neutral-50 rounded-xl p-6 min-h-96">
            <canvas id="barrasProdutos"></canvas>
          </div>
        </div>

        <!-- Alerta de Estoque Baixo -->
        <div class="bg-white rounded-2xl shadow-xl border border-red-200 p-6 ring-2 ring-red-50">
          <h3 class="text-2xl font-bold text-red-600 mb-6 flex items-center">
            <svg class="w-9 h-9 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.366-.446.982-.446 1.348 0l6.726 8.164c.347.421.258.994-.197 1.28-.455.286-1.016.112-1.28-.309L10 6.42 5.146 12.235c-.264.421-.825.595-1.28.309-.455-.286-.544-.859-.197-1.28l6.726-8.164z" clip-rule="evenodd"/>
            </svg>
            Atenção: Produtos com Estoque Baixo
          </h3>

          <% if (listaEstoqueBaixo && listaEstoqueBaixo.length > 0) { %>
            <div class="space-y-4 max-h-96 overflow-y-auto pr-2">
              <% listaEstoqueBaixo.forEach(produto => { %>
                <div class="border-l-4 border-red-500 bg-red-50 rounded-r-xl p-4 hover:bg-red-100 transition-all duration-200">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <p class="font-bold text-neutral-800 text-lg"><%= produto.nome_produto %></p>
                      <p class="text-sm text-neutral-600"><%= produto.nome_categoria %></p>
                    </div>
                    <div class="text-right ml-4">
                      <span class="text-3xl font-bold text-red-600"><%= produto.quantidade_estoque %></span>
                      <p class="text-xs text-neutral-500">unidades</p>
                    </div>
                  </div>
                  <div class="mt-3 flex flex-wrap gap-2">
                    <span class="text-xs bg-red-200 text-red-800 px-3 py-1 rounded-full font-bold">
                      Mínimo: <%= produto.estoque_minimo %>
                    </span>
                    <% if (produto.quantidade_estoque === 0) { %>
                      <span class="text-xs bg-black text-white px-4 py-1 rounded-full font-bold animate-pulse">ESGOTADO</span>
                    <% } else if (produto.quantidade_estoque <= 2) { %>
                      <span class="text-xs bg-red-700 text-white px-4 py-1 rounded-full font-bold">CRÍTICO</span>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>

            <div class="mt-6 text-center bg-red-100 rounded-xl p-4">
              <p class="text-lg font-bold text-red-800">
                <%= listaEstoqueBaixo.length %> produto(s) precisam de reposição urgente!
              </p>
            </div>

          <% } else { %>
            <div class="text-center py-16">
              <svg class="w-20 h-20 mx-auto mb-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-2xl font-bold text-green-600">Tudo sob controle!</p>
              <p class="text-neutral-600 mt-2">Nenhum produto com estoque abaixo do mínimo.</p>
            </div>
          <% } %>
        </div>

      </section>
    </div>
  </main>

  <!-- SCRIPT DO MENU MOBILE -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("btnMenu");
      const menu = document.getElementById("mobileMenu");

      btn.addEventListener("click", () => {
        if (menu.style.maxHeight && menu.style.maxHeight !== "0px") {
          menu.style.maxHeight = "0px";
        } else {
          menu.style.maxHeight = menu.scrollHeight + "px";
        }
      });

      menu.querySelectorAll("a").forEach(link => {
        link.addEventListener("click", () => {
          menu.style.maxHeight = "0px";
        });
      });
    });
  </script>

  <!-- Gráfico Chart.js -->
  <script>
    const dados = <%- JSON.stringify(produtosPorCategoria) %>;
    const labels = dados.map(c => c.nome_categoria || 'Sem categoria');
    const valores = dados.map(c => c.total_produtos);

    new Chart(document.getElementById('barrasProdutos'), {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: 'Produtos',
          data: valores,
          backgroundColor: 'rgba(34, 197, 94, 0.8)',
          borderColor: '#22c55e',
          borderWidth: 2,
          borderRadius: 10,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: {
          y: { beginAtZero: true, ticks: { stepSize: 1 } }
        },
        animation: { duration: 1500 }
      }
    });
  </script>

  <%- include('../includes/footer.ejs') %>

</body>
</html>