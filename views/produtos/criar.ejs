      <div>
        <label for="estoque" class="block text-gray-700 font-medium">Data Cadastro</label>
        <input
          type="date"
          id="data_cadastro"
          name="data_cadastro"
          class="w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-green-500"
          required
        />
      </div>
      <div>
        <label for="estoque" class="block text-gray-700 font-medium">Link Imagem</label>
        <input
          type="text"
          id="imagem"
          name="imagem"
          class="w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-green-500"
