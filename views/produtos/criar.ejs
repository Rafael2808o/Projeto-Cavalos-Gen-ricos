<%- include('../includes/header.ejs', { titulo: 'Cadastrar Produto' }) %>

<main class="p-6 bg-gray-100 min-h-screen flex flex-col items-center">
  <div class="bg-white w-full max-w-lg rounded-2xl shadow-md p-6">
