<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Produtos - Cavalos Genéticos</title>
  <script src="https://cdn.twind.style" crossorigin></script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />


</head>

<body class="bg-gray-50 text-gray-800 leading-relaxed antialiased">

  <header class="fixed top-0 w-full bg-white/95 backdrop-blur-sm shadow-md z-50 transition-all duration-300">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
      <a href="/" class="flex items-center gap-2 text-2xl font-bold text-primary">
        <img src="/img/F.png" class="w-10">
        <span>Cavalos Genéticos</span>
      </a>

      <nav class="hidden md:flex items-center gap-8 text-sm font-medium">
        <a href="/" class="hover:text-primary transition">Início</a>
        <a href="/#sobre" class="hover:text-primary transition">Sobre</a>
        <div class="relative group">
          <button class="flex items-center gap-1 hover:text-black transition">
            Produtos <i class="fas fa-chevron-down text-xs ml-1"></i>
          </button>
          <ul
            class="absolute top-full left-0 mt-2 w-48 bg-white rounded-xl shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300">
            <li><a href="#suplementos" class="block px-5 py-3 hover:bg-secondary rounded-t-xl">Suplementos</a></li>
            <li><a href="/#promocoes" class="block px-5 py-3 hover:bg-secondary rounded-b-xl">Promoções</a></li>
          </ul>
        </div>
        <!-- Botão que abre o modal -->
  <button type="button"
          onclick="document.getElementById('modalContato').showModal()"
          class="bg-green-600 text-white px-6 py-2.5 rounded-full hover:bg-green-700 transition shadow-md flex items-center gap-2 text-sm font-medium">
     <i class="fas fa-phone"></i> Contato
  </button>

  <!-- Modal nativo do HTML5 + Tailwind -->
  <dialog id="modalContato" class="w-full max-w-lg p-6 bg-white rounded-xl shadow-2xl backdrop:bg-black/50">

    <div class="flex justify-between items-center mb-6">
      <h3 class="text-2xl font-bold text-gray-800">Entre em contato</h3>
      <button onclick="document.getElementById('modalContato').close()"
              class="text-gray-500 hover:text-gray-700 text-2xl">
        ✕
      </button>
    </div>

    <form action="/enviar-contato" method="POST" class="space-y-5">

      <!-- Nome -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Nome completo <span class="text-red-500">*</span>
        </label>
        <input type="text" name="nome" required minlength="2"
               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
               placeholder="Seu nome completo">
      </div>

      <!-- Telefone -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Telefone / WhatsApp <span class="text-red-500">*</span>
        </label>
        <input type="tel" name="telefone" id="telefone" required
               pattern="\(\d{2}\) \d{4,5}-\d{4}"
               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
               placeholder="(11) 98765-4321">
      </div>

      <!-- Mensagem -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Mensagem <span class="text-red-500">*</span>
        </label>
        <textarea name="mensagem" rows="5" required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition resize-none"
                  placeholder="Escreva sua dúvida, solicitação de orçamento ou mensagem..."></textarea>
      </div>

      <!-- Botões -->
      <div class="flex gap-3 justify-end pt-4">
        <button type="button"
                onclick="document.getElementById('modalContato').close()"
                class="px-6 py-3 bg-gray-200 text-gray-800 font-medium rounded-lg hover:bg-gray-300 transition">
          Cancelar
        </button>
        <button type="submit"
                class="px-6 py-3 bg-green-700 text-white font-medium rounded-lg hover:bg-green-800 transition flex items-center gap-2">
          <svg class="w-5 h-5 hidden" id="loading" viewBox="0 0 38 38" stroke="currentColor">
            <g fill="none" fill-rule="evenodd">
              <g transform="translate(1 1)" stroke-width="2">
                <circle stroke-opacity=".5" cx="18" cy="18" r="18"/>
                <path d="M36 18c0-9.94-8.06-18-18-18">
                  <animateTransform attributeName="transform" type="rotate" from="0 18 18" to="360 18 18" dur="1s" repeatCount="indefinite"/>
                </path>
              </g>
            </g>
          </svg>
          Enviar Mensagem
        </button>
      </div>
    </form>
  </dialog>
        <a href="/admin/login"
          class="bg-green-600 text-white px-6 py-2.5 rounded-full hover:bg-green-700 transition shadow-md flex items-center gap-2 text-sm font-medium">Login</a>
      </nav>

      <button id="mobileMenuBtn" class="md:hidden text-primary text-2xl">
        <i class="fas fa-bars"></i>
      </button>
    </div>
  </header>

  <section class="pt-32 pb-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-6">
        Suplementos Premium para Cavalos
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Fórmulas desenvolvidas com os melhores ingredientes do mercado para desempenho, recuperação e saúde do seu
        atleta equino.
      </p>
    </div>
  </section>

  <section id="suplementos" class="py-16 bg-white">
    <div class="container mx-auto px-6 max-w-7xl">

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">

        <% if (produtos.length===0) { %>
          <div class="col-span-full text-center py-20">
            <p class="text-gray-500 text-lg">Nenhum produto disponível no momento.</p>
          </div>
          <% } else { %>
            <% produtos.forEach(produto=> { %>

              <div
                class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden flex flex-col h-full border border-gray-100">

                <% if (produto.novo) { %>
                  <div class="absolute top-4 left-4 z-10 badge-new">NOVO</div>
                  <% } %>


                    <div class="overflow-hidden bg-gray-50">
                      <img src="<%= produto.imagem %>" alt="<%= produto.nome %>"
                        class="w-full h-64 object-cover transition-transform duration-700 group-hover:scale-110">
                    </div>


                    <div class="p-6 flex flex-col flex-grow">
                      <h3 class="text-2xl font-bold text-gray-900 mb-2">
                        <%= produto.nome %>
                      </h3>

                      <p class="text-gray-600 text-sm leading-relaxed mb-6 flex-grow">
                        <%= produto.descricao %>
                      </p>

                      <div class="mt-auto">
                        <div class="flex items-center justify-between mb-5">
                          <span class="text-3xl font-extrabold text-emerald-600">
                            R$ <%= Number(produto.valor_custo).toFixed(2).replace('.', ',' ) %>
                          </span>
                          <% if (produto.valor_antigo) { %>
                            <span class="text-lg text-gray-400 line-through">
                              R$ <%= Number(produto.valor_antigo).toFixed(2).replace('.', ',' ) %>
                            </span>
                            <% } %>
                        </div>


                        <a href="https://wa.me/5511999999999?text=Olá! Gostaria de mais informações sobre o produto: <%= encodeURIComponent(produto.nome) %>"
                          target="_blank" class="btn-primary w-full text-center flex items-center justify-center gap-2">
                          <i class="fab fa-whatsapp text-xl"></i>
                          Comprar pelo WhatsApp
                        </a>
                      </div>
                    </div>
              </div>

              <% }) %>
                <% } %>

      </div>
    </div>

  </section>
    <footer class="bg-gray-900 text-gray-300 py-12">
    <div class="container mx-auto px-6 text-center">
      <div class="flex justify-center gap-8 mb-6 text-3xl">
        <a href="#" class="hover:text-white"><i class="fab fa-whatsapp"></i></a>
        <a href="#" class="hover:text-white"><i class="fab fa-instagram"></i></a>
        <a href="#" class="hover:text-white"><i class="fab fa-facebook"></i></a>
      </div>
      <p>&copy; 2025 <strong class="text-white">Cavalos Genéricos</strong> — Todos os direitos reservados</p>
      <p class="text-sm mt-2">Andradina-SP</p>
    </div>
  </footer>

  <script>

    const mobileMenuBtn = document.getElementById("mobileMenuBtn");
    const mobileMenu = document.getElementById("mobileMenu");

    mobileMenuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    // Mobile Menu
    document.getElementById("mobileMenuBtn").addEventListener("click", () => {
      document.getElementById("mobileMenu").classList.toggle("hidden");
    });

    // Form Submit (simulação)
    document.getElementById('contactForm').addEventListener('submit', function (e) {
      e.preventDefault();
      alert('Mensagem enviada com sucesso! Entraremos em contato em breve.');
      closeModal();
      this.reset();
    });

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });

  </script>
</body>

</html>